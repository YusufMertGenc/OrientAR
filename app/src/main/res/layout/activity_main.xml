<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="METU NCC ORIENTATION"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#B71C1C"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins">

        <Button
            android:id="@+id/btnCampusTour"
            android:text="Campus Tour"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnFaq"
            android:text="FAQ"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnTreasureHunt"
            android:text="Treasure Hunt"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnSocieties"
            android:text="Societies"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"/>
    </GridLayout>
</LinearLayout>